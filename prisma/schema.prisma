generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom fields for our app
  xp            Int       @default(0)
  streak        Int       @default(0)
  lastActiveAt  DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations for our app features
  quizAttempts    QuizAttempt[]
  badges          UserBadge[]
  videoProgress   VideoProgress[]
  studySessions   StudySession[]
  topicProgress   TopicProgress[]
  subjectProgress SubjectProgress[]
  dailyGoals      DailyGoal[]
  achievements    Achievement[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Custom models for our learning platform
model Quiz {
  id          String        @id @default(cuid())
  title       String
  videoId     String
  videoTitle  String
  questions   Json          // Store questions as JSON
  createdAt   DateTime      @default(now())
  attempts    QuizAttempt[]
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  score     Int
  answers   Json     // Store user answers as JSON
  xpEarned  Int
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  description String
  icon        String
  requirement Json        // Store badge requirements as JSON
  createdAt   DateTime    @default(now())
  
  userBadges UserBadge[]
}

model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
}

// Video Progress Tracking
model VideoProgress {
  id            String   @id @default(cuid())
  userId        String
  videoId       String
  videoTitle    String
  exam          String
  subject       String
  topic         String?
  watchDuration Int      @default(0) // in seconds
  totalDuration Int?     // video length in seconds
  completed     Boolean  @default(false)
  lastWatchedAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, videoId])
}

// Study Session Tracking
model StudySession {
  id        String   @id @default(cuid())
  userId    String
  exam      String
  subject   String
  topic     String?
  duration  Int      // in minutes
  activities Json    // activities during session
  xpEarned  Int      @default(0)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Topic Progress
model TopicProgress {
  id              String   @id @default(cuid())
  userId          String
  exam            String
  subject         String
  topic           String
  videosWatched   Int      @default(0)
  totalVideos     Int      @default(0)
  quizzesTaken    Int      @default(0)
  totalQuizzes    Int      @default(0)
  averageScore    Float    @default(0)
  timeSpent       Int      @default(0) // in minutes
  completed       Boolean  @default(false)
  lastStudiedAt   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exam, subject, topic])
}

// Subject Progress
model SubjectProgress {
  id              String   @id @default(cuid())
  userId          String
  exam            String
  subject         String
  topicsCompleted Int      @default(0)
  totalTopics     Int      @default(0)
  videosWatched   Int      @default(0)
  totalVideos     Int      @default(0)
  quizzesTaken    Int      @default(0)
  averageScore    Float    @default(0)
  timeSpent       Int      @default(0) // in minutes
  level           Int      @default(1)
  xpEarned        Int      @default(0)
  completed       Boolean  @default(false)
  lastStudiedAt   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exam, subject])
}

// Daily Goals
model DailyGoal {
  id             String   @id @default(cuid())
  userId         String
  date           DateTime @db.Date
  videosTarget   Int      @default(3)
  videosWatched  Int      @default(0)
  quizzesTarget  Int      @default(2)
  quizzesTaken   Int      @default(0)
  studyTimeTarget Int     @default(60) // in minutes
  studyTimeActual Int     @default(0)
  xpTarget       Int      @default(100)
  xpEarned       Int      @default(0)
  completed      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
}

// Achievements
model Achievement {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "streak", "quiz_master", "video_binge", etc.
  title       String
  description String
  icon        String
  xpReward    Int      @default(0)
  unlockedAt  DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
