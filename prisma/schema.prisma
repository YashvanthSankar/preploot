generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String            @unique
  emailVerified    DateTime?
  image            String?
  xp               Int               @default(0)
  streak           Int               @default(0)
  lastActiveAt     DateTime          @default(now())
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  preferences      Json?
  selectedExam     String?
  selectedSubjects Json?
  accounts         Account[]
  achievements     Achievement[]
  dailyGoals       DailyGoal[]
  quizAttempts     QuizAttempt[]
  sessions         Session[]
  subjectProgress  SubjectProgress[]
  badges           UserBadge[]
  videoProgress    VideoProgress[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Quiz {
  id         String        @id @default(cuid())
  title      String
  videoId    String
  videoTitle String
  questions  Json
  createdAt  DateTime      @default(now())
  attempts   QuizAttempt[]
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  score     Int
  answers   Json
  xpEarned  Int
  createdAt DateTime @default(now())
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  description String
  icon        String
  requirement Json
  createdAt   DateTime    @default(now())
  userBadges  UserBadge[]
}

model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())
  badge    Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
}

model SubjectProgress {
  id              String   @id @default(cuid())
  userId          String
  exam            String
  subject         String
  totalTopics     Int      @default(10)
  totalVideos     Int      @default(50)
  topicsCompleted Int      @default(0)
  videosWatched   Int      @default(0)
  quizzesTaken    Int      @default(0)
  averageScore    Float    @default(0.0)
  timeSpent       Int      @default(0)
  level           Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, exam, subject])
}

model DailyGoal {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime @db.Date
  targetVideos     Int      @default(3)
  targetQuizzes    Int      @default(2)
  completedVideos  Int      @default(0)
  completedQuizzes Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date], name: "userId_date")
}

model VideoProgress {
  id              String   @id @default(cuid())
  userId          String
  videoId         String
  videoTitle      String?
  exam            String?
  subject         String?
  topic           String?
  watchedDuration Int      @default(0)
  totalDuration   Int?
  completed       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  type        String
  title       String
  description String
  xpReward    Int      @default(0)
  unlockedAt  DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
